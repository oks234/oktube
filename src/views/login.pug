extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="username" type="text" required placeholder="Username")
    input(name="password" type="password" required placeholder="Password")
    input(type="submit" value="Login")
    br
    a(href="https://github.com/login/oauth/authorize?client_id=e5bc5695da64de5ad310&scope=&allow_signup=false") Continue with Github &rarr;
  hr
  div
    span Don't have an account? 
    a(href="/join") Join now &rarr;